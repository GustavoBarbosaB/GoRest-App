<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="170dp"
        android:layout_margin="0dp">

        <LinearLayout
            xmlns:svgimageview="http://schemas.android.com/apk/res-auto"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:contentDescription="TODO">

            <ImageView
                android:id="@+id/imageNation"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:background="@color/colorLight"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/nameNation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Noruega"
                android:layout_alignBaseline="@+id/imageNation"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:drawableRight="@drawable/ic_check_circle"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>